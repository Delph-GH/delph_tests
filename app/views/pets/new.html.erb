<div class="container">
  <h1>Add a new pet to your list!</h1>
  <%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :pet_type, collection: ["Cat", "Dog"], selected: "Cat" %>
    <%= f.input :birth_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year - 100, discard_day: false,
                              order: [:day, :month, :year] %>
    <%= f.input :gender, as: :radio_buttons, collection: ['Female', 'Male'] %>
    <%= f.input :breed %>
    <%= f.button :submit %>
  <% end %>
</div>

