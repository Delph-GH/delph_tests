<div class="navbar-tim">
  <div class="navbar-text">
    <div class="navbar-title">MY PETS</div>
  </div>
  <div class="navbar-logo-container centered-vertically">
    <%= image_tag "white_foot.png", alt: "alttext" %>
  </div>
  <div class="pet-avatar"></div>
</div>



<div class="container centered-vertically">
  <div class="pet-cards centered-vertically">
    <p class="blue-title">Hello <%= current_user.username %>!</p>
    <% @pets.each do |pet| %>
      <div class="pet-card">
        <div class="pet-image-container">

        <% if pet.photo.attached? %>
          <%= cl_image_tag pet.photo.key %>
        <% else %>
          <% if pet.pet_type == "Cat" %>
            <%= image_tag @cat_placeholder %>
          <% else %>
            <%= image_tag @dog_placeholder %>
          <% end %>
        <% end %>

        <div class="pet-card-name-container">
          <span><%= pet.name.upcase %></span>
        </div>

        </div>

        <div class="pet-actions">
          <%= link_to pet_videos_path(pet) do %>
            <i class="material-icons">mic</i>
          <% end %>
          <%#= link_to pet_stats_path(pet) do %>
            <!-- <i class="material-icons">favorite</i> -->
          <%# end %>
          <%= link_to pet_stats_path(pet) do %>
            <i class="fas fa-chart-pie" style="font-size: 19px;"></i>
          <% end %>
          <%= link_to pet_path(pet) do%>
            <i class="material-icons">edit</i>
          <% end %>

          <%#= link_to pet_path(pet), method: :delete, data: { confirm: "This will delete all data about #{pet.name}... are you sure?" } do%>
<!--             <i class="material-icons">remove_circle_outline</i>
 -->          <%# end %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= render 'shared/sidenav' %>

<div class="bottom-action-bar">
  <i id="options-menu" class="material-icons">dehaze</i>
  <%= link_to new_pet_path do  %>
    <i class="material-icons" style="color: white">add</i>
  <% end %>
</div>

<%= render 'shared/video_btn' %>




