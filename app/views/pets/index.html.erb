<nav>
  <div class="nav-wrapper deep-orange">
    <a href="#" class="brand-logo">Interpet</a>
  </div>
</nav>

<div class="container">
  <div class="pet-cards centered-vertically">
    <% @pets.each do |pet| %>
      <div class="pet-card">
        <%= link_to pet_path(pet), class: "pet-image" do %>
          <% if pet.photo.attached? %>
            <%= cl_image_tag pet.photo.key %>
          <% else %>
            <%= image_tag @img_placeholder %>
          <% end %>
        <% end %>
        <span><%= pet.name.upcase %></span>
      </div>
    <% end %>
  </div>
</div>

<div class="tim-sidenav-background">
</div>
<div class="tim-sidenav">
  <div class="tim-sidenav-content-top"></div>
  <div class="tim-sidenav-content-mid">
    <ul>
      <li><a class="tim-sidenav-link waves-effect" href="#!"><i class="material-icons">mic</i>Translator</a></li>
      <li><a class="tim-sidenav-link waves-effect" href="#!">Summary</a></li>
      <li><a class="tim-sidenav-link waves-effect" href="#!">Sources</a></li>
      <li><a class="tim-sidenav-link waves-effect" href="#!">Calendar</a></li>
      <li><a class="tim-sidenav-link waves-effect" href="#!">Alert Journal</a></li>
    </ul>

  </div>
  <div class="tim-sidenav-content-bottom">
    <ul>
      <li><a class="tim-sidenav-link waves-effect" href="#!">Profile Settings</a></li>
    </ul>
  </div>
</div>


<a id="action-button" class="action-button btn-floating btn-large waves-effect waves-light cyan lighten-2"><i class="material-icons">add</i></a>
<div class="bottom-action-bar deep-orange"></div>





