<div class="navbar-tim">
  <div class="navbar-logo-container centered-vertically">
    <%= image_tag "white_foot.png", alt: "alttext" %>
  </div>
</div>

<div id="scale-me" class="container centered-vertically scale-transition scale-out">
  <div class="icon-new-pet centered-vertically">
    <% if @pet.photo.attached? %>
      <%= cl_image_tag @pet.photo.key, class: "avatar-like" %>
    <% else %>
      <% if @pet.pet_type == "Cat" %>
        <%= image_tag @cat_placeholder, class: "avatar-like" %>
      <% else %>
        <%= image_tag @dog_placeholder, class: "avatar-like" %>
      <% end %>
    <% end %>
  </div>
  <p class="blue-title"><%= @pet.name.upcase %> PERSONALITY</p>

  <%= simple_form_for @pet do |f| %>

    <div class="range-lengend">
      <p>closed</p>
      <p>open</p>
    </div>
    <%= f.input :openess, as: :range, input_html: { min: '0', max: '10'}, label: false %>

    <div class="range-lengend">
      <p>careless</p>
      <p>conscientious</p>
    </div>
    <%= f.input :conscientiousness, as: :range, input_html: { min: '0', max: '10'}, label: false %>

    <div class="range-lengend">
      <p>introvert</p>
      <p>extravert</p>
    </div>
    <%= f.input :extravertness, as: :range, input_html: { min: '0', max: '10'}, label: false %>

    <div class="range-lengend">
      <p>antagonistic</p>
      <p>agreable</p>
    </div>
    <%= f.input :agreableness, as: :range, input_html: { min: '0', max: '10'}, label: false %>

    <div class="range-lengend">
      <p>unstable</p>
      <p>stable</p>
    </div>
    <%= f.input :stableness, as: :range, input_html: { min: '0', max: '10'}, label: false %>

 <!--     t.string :openess
      t.string :conscientiousness
      t.string :extravertness
      t.string :agreableness
      t.string :stableness -->


    <div class="centered-vertically">
      <%= f.button :submit, "LETÂ´S GO", class: "button-orange" %>
    </div>
  <% end %>

</div>
