<%= render 'shared/navbar' %>

<div class="container centered-vertically">
  <% if @videos.length == 0 %>
    <p class="blue-title" style="text-align: center; margin-top: 20vh;">You did not upload any video starring <%= @pet.name %> yet!</p>
  <% else %>


  <div class="video-cards centered-vertically">

      <% if @videos.count == 1 %>
        <p class="blue-title"><%= @videos.count %> video uploaded!</p>
      <% else %>
        <p class="blue-title"><%= @videos.count %> videos uploaded!</p>
      <% end %>

    <% @videos.each do |video| %>
      <div class="video-card">
        <div class="video-wrap centered-vertically">
          <%= cl_video_tag(video.clip.key, controls: true, fetch_format: :auto, width: '100%', height: '100%') %>
        </div>
        <div class="video-description">
          <p><%= video.created_at.strftime("Uploaded on %d/%m/%Y") %></p>
          <%= link_to pet_video_path(@pet,video), method: :delete, data: { confirm: "This video will be deleted... are you sure?" } do%>
            <i class="material-icons">remove_circle_outline</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% end %>

<%= render 'shared/sidenav' %>

<div class="bottom-action-bar">
  <i id="options-menu" class="material-icons">dehaze</i>
  <!-- <i class="material-icons">add</i> -->
</div>

<%= render 'shared/video_btn' %>
