<%= render 'shared/navbar' %>


<div class="container">

  <div class="stat-lines-container centered-vertically">
    <% if @pet_videos < 5 %>
      <!-- <p class="blue-title" style="text-align: center"> You still need to upload <strong><%#= 10 - @pet_videos %></strong> videos of <%#= @pet.name %> before you can access itÂ´s stats!</p> -->
      <p class="transversal-text">We still need <strong><%= 5 - @pet_videos %></strong> videos of <%= @pet.name %> to properly calibrate our prototype algorithm!</p>
    <% end %>

    <div class="stat-line">
      <%#= link_to pet_emotions_path(@pet), class: "stat-item unclickable" do  %>
      <%= link_to pet_personality_path(@pet), class: "stat-item" do  %>
        <i class="material-icons">color_lens</i>
        <p>Personality</p>
      <% end %>
      <%= link_to pet_emotions_path(@pet), class: "stat-item" do  %>
      <%#= link_to "#", class: "stat-item unclickable" do  %>
        <i class="fas fa-heart"></i>
        <p>Emotions</p>
        <!-- <span>Coming Soon!</span> -->
      <% end %>
      <%= link_to pet_activity_path(@pet), class: "stat-item" do  %>
      <%#= link_to "#", class: "stat-item unclickable" do  %>
        <i class="material-icons">pets</i>
        <p>Activity</p>
        <!-- <span>Coming Soon!</span> -->
      <% end %>
    </div>

    <div class="stat-line">
      <%= link_to pet_sleep_path(@pet), class: "stat-item" do  %>
      <%#= link_to "#", class: "stat-item unclickable" do  %>
        <i class="far fa-moon"></i>
        <p>Sleep</p>
        <!-- <span>Coming Soon!</span> -->
      <% end %>
      <%= link_to pet_scratching_path(@pet), class: "stat-item" do  %>
      <%#= link_to "#", class: "stat-item unclickable" do  %>
        <i class="fas fa-mitten"></i>
        <p>Scratching</p>
        <!-- <span>Coming Soon!</span> -->
      <% end %>
      <%= link_to pet_weight_path(@pet), class: "stat-item" do  %>
      <%#= link_to "#", class: "stat-item unclickable" do  %>
        <i class="fas fa-weight"></i>
        <p>Weight</p>
        <!-- <span>Coming Soon!</span> -->
      <% end %>
    </div>

    <div class="stat-line">
      <%#= link_to pet_breathing_path(@pet), class: "stat-item" do  %>
      <div class="stat-item unclickable">
        <i class="fas fa-wind"></i>
        <p>Breathing</p>
        <span>Coming Soon!</span>
      </div>
      <%# end %>
      <%#= link_to pet_butt_licking_path(@pet), class: "stat-item" do  %>
      <div class="stat-item unclickable">
        <i class="far fa-grin-tongue-wink"></i>
        <p>Butt Licking</p>
        <span>Coming Soon!</span>
      </div>
      <%# end %>
      <%#= link_to pet_plotting_path(@pet), class: "stat-item" do  %>
      <div class="stat-item unclickable">
        <i class="fas fa-user-secret"></i>
        <p>Plotting</p>
        <span>Coming Soon!</span>
      </div>
      <%# end %>
    </div>
  </div>
</div>



