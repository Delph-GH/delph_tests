<%= render 'shared/navbar' %>

<div class="container">
  <% if @pet_videos < 10 %>
    <p style="text-align: center"> You still need to upload <strong><%= 10 - @pet_videos %></strong> videos of <%= @pet.name %> before you can access itÂ´s stats!</p>
  <% end %>
  <div class="stat-lines-container centered-vertically">

    <div class="stat-line">
      <%#= link_to pet_emotions_path(@pet), class: "stat-item unclickable" do  %>
      <%= link_to "#", class: "stat-item unclickable" do  %>
        <i class="fas fa-heart"></i>
        <p>Emotions</p>
