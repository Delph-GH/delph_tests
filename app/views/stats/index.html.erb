        <p>Activity</p>
        <span>Coming Soon!</span>
      <% end %>
      <%#= link_to pet_sleep_path(@pet), class: "stat-item unclickable" do  %>
      <%= link_to "#", class: "stat-item unclickable" do  %>
        <i class="far fa-moon"></i>
        <p>Sleep</p>
        <span>Coming Soon!</span>
      <% end %>
    </div>

    <div class="stat-line">

      <%#= link_to pet_scratching_path(@pet), class: "stat-item unclickable" do  %>
      <%= link_to "#", class: "stat-item unclickable" do  %>
        <i class="fas fa-mitten"></i>
