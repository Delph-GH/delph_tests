<div class="navbar-tim">
  <div class="navbar-logo-container centered-vertically">
    <%= image_tag "white_foot.png", alt: "alttext" %>
  </div>
</div>

<div class="container centered-vertically">
  <p class="blue-title">PAWSOME, YOU ARE HERE!</p>
  <p class="orange-note">Login to continue</p>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions centered-vertically">
      <%= f.button :submit, "LOGIN", class: "button-orange" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
